@model MySteamPlay.Models.GameListViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Game Details</h2>
<br />
<p> <h3 class="text-center">@Html.DisplayFor(model => Model.Name)</h3> </p><br />

<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
            <div class="col-md-4">
                <img src="@Html.DisplayFor(model => model.HeaderUrl)" class="img-responsive" />
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-6">
                <strong>Total time playing: </strong>@Html.DisplayFor(model => model.Playtime) <strong> hours</strong> <br />
                <br />

                <strong>Hide this game from Main List? &nbsp;&nbsp;&nbsp;</strong>
                <input id="toggle-event" type="checkbox" data-toggle="toggle">
                <div id="console-event"></div>
                (This does not delete your game and can be undone in the future.)<br />
                <br />
                

                <strong>Tags: </strong><br />
                <br />
                    <a class="btn btn-lg" href="#" role="button"><strong>LAUNCH @Html.DisplayFor(model => Model.Name)</strong></a>
            </div>
        </div>
    <div class="row">
        <div class="col-md-5">
            <h4 class="text-center">Tags</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <div class="container" style="max-width: 450px;">
                <form role="form">
                    <label class="checkbox-inline">
                        <input type="checkbox" value="">Tag 1
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox" value="">Tag 2
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox" value="">Tag 3
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox" value="">Tag 4
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox" value="">Tag 5
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox" value="">Tag 6
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox" value="">Tag 2
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox" value="">Tag 3
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox" value="">Tag 4
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox" value="">Tag 5
                    </label>
                    <label class="checkbox-inline">
                        <input type="checkbox" value="">Tag 6
                    </label>
                </form>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-5">
            <form>
                <div class="form-group" style="min-width:260px; height:auto; text-align:center">
                    <label for="commentsInput"><strong>Comments: </strong></label>
                    <input type="text" class="form-control" rows="6" style="max-width:460px" id="commentsInput" placeholder="Leave your notes and comments to self here" />
                </div>
            </form>
        </div>
        <br /><br /><br />
    </div>

    
    <footer class="text-center" style="padding-top:30px">
        @Html.ActionLink("Edit", "Edit", new { id = Model.AppId }) |
        @Html.ActionLink("Back to List", "Index")
    </footer>


</div>


<script>
    $(function () {
        $('#toggle-event').change(function () {
            $('#console-event').html('Toggle: ' + $(this).prop('checked'))
        })
    })
</script>